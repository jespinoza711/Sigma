                //$("#menuPrincipal").css("display", "block");
            } else if (perfil == "Tecnico") {
                //acceso = false;
                //$("#iniciar").css("display", "none");
                //$("#cerrar").css("display", "block");
                //$("#menuPrincipal").css("display", "block");
            }
        }

        function borrarcookie() {            
            deleteCookie("_nombreCompleto");
            deleteCookie("_nombreUsuario");
            deleteCookie("_perfil");

            $("#iniciar").css("display", "block");
            $("#cerrar").css("display", "none");
            $("#menuPrincipal").css("display", "none");
            
            perfil = "";
            nombre = "";
            acceso = false;
        }
    </script>

</body>
</html>