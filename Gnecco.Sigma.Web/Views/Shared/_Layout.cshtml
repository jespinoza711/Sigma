    <script type="text/javascript" src="~/Scripts/Vendor/angular.min.js"></script>
    <script type="text/javascript" src="~/Scripts/Vendor/angular-ui-router.min.js"></script>

    <!-- Remover en produccion -->
    <script type="text/javascript" src="~/Scripts/Vendor/angular-mocks.js"></script>
    <!-- Fin -->
    @RenderSection("scripts", required: false)

    <script src="/Scripts/Vendor/sweet-alert.min.js"></script>
    <script src="/Scripts/Vendor/please-wait.min.js"></script>
