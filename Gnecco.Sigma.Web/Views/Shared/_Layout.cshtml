        var nombre = getCookie("_nombreUsuario");
        var perfil = getCookie("_perfil");
        var nomcompleto = getCookie("_nombreCompleto");
        var acceso = true;

        if (nombre == "" && perfil == "") {
            $("#iniciar").css("display", "block");
            $("#cerrar").css("display", "none");
            $("#menuPrincipal").css("display", "none");
            acceso = false;
        } else {
            if (perfil == "Administrador") {
                acceso = true;
                $("#iniciar").css("display", "none");
                $("#cerrar").css("display", "block");
                $("#menuPrincipal").css("display", "block");
            } else if (perfil == "Asesor") {
                //acceso = false;
                //$("#iniciar").css("display", "none");
